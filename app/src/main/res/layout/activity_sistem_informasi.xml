<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    tools:context=".SistemInformasiActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_profile_fti_black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_cloud_computing" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/mavenpro_bold"
                android:text="@string/sistem_informasi"
                android:textColor="@color/white"
                android:textSize="28sp"/>

            <!-- BEGIN : CardView - Visi & Misi -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_SI_visi_misi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginBottom="20dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:focusable="true"
                android:clickable="true"
                app:cardElevation="12dp"
                app:cardCornerRadius="60dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"
                    android:layout_marginHorizontal="32dp">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_target"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="@string/visi_amp_misi"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!-- END : CardView - Visi & Misi -->

            <!-- BEGIN : CardView - Kompetensi -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_SI_kompetensi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginBottom="20dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:focusable="true"
                android:clickable="true"
                app:cardElevation="12dp"
                app:cardCornerRadius="60dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"
                    android:layout_marginHorizontal="32dp">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_statistics"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Kompetensi"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!-- END : CardView - Kompetensi -->

            <!-- BEGIN : CardView - Daftar Dosen -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_SI_daftar_dosen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginBottom="20dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:focusable="true"
                android:clickable="true"
                app:cardElevation="12dp"
                app:cardCornerRadius="60dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"
                    android:layout_marginHorizontal="32dp">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_leader"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="@string/daftar_dosen"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!-- END : CardView - Daftar Dosen -->

            <!-- Garis Horizontal -->
            <View
                android:layout_width="72dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="44dp"
                android:background="#DDD"/>

            <Button
                android:id="@+id/btn_kembali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:background="@drawable/custom_button_black"
                android:paddingLeft="32dp"
                android:paddingTop="8dp"
                android:paddingRight="32dp"
                android:paddingBottom="8dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/kembali"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:backgroundTint="@null"
                app:icon="@drawable/ic_baseline_keyboard_backspace_24"
                app:iconSize="22dp" />


        </LinearLayout>

    </FrameLayout>

</ScrollView>